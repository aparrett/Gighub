@model GigHub.ViewModels.GigDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Gig.Artist.Name</h2>

@if (User.Identity.IsAuthenticated)
{
    if (Model.IsFollowing)
    {
        <button class="btn btn-link btn-sm">Following</button>
    }
    else
    {
        <button class="btn btn-link btn-sm">Follow?</button>
    }
}

<p>Performing at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("MMMM dd") at @Model.Gig.DateTime.ToString("hh:mm tt")</p>

@if (User.Identity.IsAuthenticated && Model.IsAttending)
{
    <p>You are going to this event.</p>
}